<div class="main-content">

  <!-- PROFILE CARD -->
  <div class="card shadow-sm">
      <div class="text-right">
       <sapn class="mr-4 mt-4">back</sapn>
      </div>
    <div class="card-body d-flex align-items-center">

    
      <div>
       <img src="/<%= data.image %>"
     alt="Profile Image"
     style="width:110px; height:110px; object-fit:contain; border-radius:10px;">

      </div>

      <!-- TEXT DETAILS -->
      <div style="margin-left: 25px; flex:1;">
        <h4 style="margin:0; font-weight:600; color:#333;"><%= data.name %></h4>

        <p style="margin:5px 0 3px; color:#666; font-size:14px;">
          <i class="fas fa-envelope"></i>
          <%= data.email %>
        </p>

        <p style="margin:0; color:#777; font-size:13px;">
          <i class="fas fa-user-shield"></i>
          Admin ID: <%= data.id %>
        </p>

        <button id="editBtn" 
                class="btn btn-primary btn-sm mt-3"
                style="padding:5px 14px;">
          Edit Profile
        </button>
      </div>

    </div>
  </div>

  <!-- EDIT FORM -->
  <div id="editForm" style="display:none; margin-top:25px; animation:fadeIn .3s;">
    <div class="card shadow-sm">
      <div class="card-body">

        <h5 style="font-weight:600; margin-bottom:20px;">Edit Profile</h5>

        <form action="/updateProfile/<%= data.id %>" method="POST" enctype="multipart/form-data">

          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">Full Name</label>
              <input type="text" name="name" class="form-control" value="<%= data.name %>">
            </div>

            <div class="col-md-6 mb-3">
              <label class="form-label">Email</label>
              <input type="email" name="email" class="form-control" value="<%= data.email %>">
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="text" name="password" class="form-control" value="<%= data.password %>">
          </div>

          <div class="mb-3">
            <label class="form-label">Profile Image</label><br>
            <img src="/<%= data.image %>" width="90" class="rounded mb-2" style="border:1px solid #ccc;">
            <input type="file" name="image" class="form-control mt-2">
          </div>

          <button class="btn btn-success w-100">Save Changes</button>

        </form>

      </div>
    </div>
  </div>

</div>

<!-- ANIMATION -->
<style>
@keyframes fadeIn {
  from {opacity:0; transform:translateY(10px);}
  to   {opacity:1; transform:translateY(0);}
}
</style>

<!-- TOGGLE -->
<script>
document.getElementById("editBtn").addEventListener("click", () => {
  const box = document.getElementById("editForm");
  box.style.display = box.style.display === "none" ? "block" : "none";
});
</script>
